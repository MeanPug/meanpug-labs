<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/static/site.css" />

    <title><%= title %></title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 position-relative">
                <div class="ActionLog">
                    <ul class="ActionLog__list">
                    </ul>
                </div>
            </div>

            <div class="col-sm-8">
                <h1 class="Header Header--main"><%= header %></h1>

                <div class="row">
                    <!-- Products -->
                    <% products.forEach(function(p) { %>
                    <div class="col-sm-4">
                        <div class="Product">
                            <img class="Product__image" src="<%= p.image %>" />

                            <div class="pt-2 px-3">
                                <strong class="Product__name"><%= p.name %></strong>
                                <strong class="Product__price d-block" data-val="<%= p.price %>"><%= formatPrice(p.price) %></strong>
                                <p class="Product__desc pt-2"><%= p.description %></p>
                            </div>

                            <button class="btn btn-primary btn-block btn-buy py-2 mt-4">Buy</button>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/static/site.min.js"></script>
</body>
</html>
